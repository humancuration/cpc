{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust App",
            "cargo": {
                "args": [
                    "build",
                    "--bin=${workspaceFolderBasename}"
                ],
                "filter": {
                    "name": "${workspaceFolderBasename}",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Current Package",
            "cargo": {
                "args": [
                    "build",
                    "--package=${input:package}"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=${input:package}"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "package",
            "description": "Package to debug",
            "type": "promptString"
        }
    ]
}