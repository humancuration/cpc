{
  // Rust Language Server Configuration
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.allFeatures": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.procMacro.attributes.enable": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.diagnostics.enableExperimental": true,
  "rust-analyzer.completion.addCallParentheses": true,
  "rust-analyzer.completion.addCallArgumentSnippets": true,
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  
  // Workspace-specific Rust settings
  "rust-analyzer.cargo.target": null,
  "rust-analyzer.server.path": null,
  "rust-analyzer.updates.channel": "stable",
  
  // File associations for better syntax highlighting
  "files.associations": {
    "*.rs": "rust",
    "Cargo.toml": "toml",
    "Cargo.lock": "toml",
    "*.proto": "proto3",
    "*.graphql": "graphql",
    "*.gql": "graphql"
  },
  
  // Editor settings for Rust
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  
  // TOML formatting
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  
  // GraphQL settings
  "[graphql]": {
    "editor.defaultFormatter": "GraphQL.vscode-graphql",
    "editor.formatOnSave": true
  },
  
  // Protocol Buffers
  "[proto3]": {
    "editor.defaultFormatter": "zxh404.vscode-proto3",
    "editor.formatOnSave": true
  },
  
  // Search and file explorer settings
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/Cargo.lock": true
  },
  
  "files.exclude": {
    "**/target": true,
    "**/.DS_Store": true
  },
  
  "files.watcherExclude": {
    "**/target/**": true,
    "**/node_modules/**": true
  },
  
  // Terminal settings for Rust development
  "terminal.integrated.env.windows": {
    "RUST_BACKTRACE": "1"
  },
  
  // Extension recommendations (will suggest these to team members)
  "extensions.recommendations": [
    "rust-lang.rust-analyzer",
    "tamasfe.even-better-toml",
    "vadimcn.vscode-lldb",
    "serayuzgur.crates",
    "GraphQL.vscode-graphql",
    "zxh404.vscode-proto3"
  ],
  
  // Debugging configuration hints
  "debug.allowBreakpointsEverywhere": true,
  
  // Git settings
  "git.ignoreLimitWarning": true,
  
  // Performance optimizations for large workspace
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "javascript.suggest.autoImports": false,
  
  // Workspace trust (for Rust macros and build scripts)
  "security.workspace.trust.untrustedFiles": "open",
  
  // Color customizations for better Rust development
  "workbench.colorCustomizations": {
    "rust_analyzer.inlayHints.foreground": "#787878",
    "rust_analyzer.inlayHints.background": "#00000000"
  }
}