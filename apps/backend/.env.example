# Backend Configuration
CPC_BACKEND_PORT=3000
CPC_ENV=dev

# JWT Configuration
CPC_JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long

# Encryption Configuration (64 character hex string)
CPC_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/cpc_database

# P2P Configuration
P2PANDA_ENDPOINT=http://localhost:2020

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Security Configuration
ENABLE_CSRF_PROTECTION=true
ENABLE_CONTENT_SECURITY_POLICY=true

# Legacy compatibility (if needed)
IMPACT_SIGNING_KEY=base64-encoded-signing-key